<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/address_list_cv_card"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="4dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/address_list_ll_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBlue"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:translationZ="2dp">
                  <TextView
                      android:id="@+id/address_list_tv_name"
                      android:layout_width="wrap_content"
                      android:layout_marginLeft="60dp"
                      android:textColor="@color/white"
                      android:textSize="15sp"
                      android:text="本机昵称"
                      android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_list_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"
                        android:text="12345678987"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_chat_civ_head"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:src="@drawable/head"
                android:translationZ="2dp"
                app:civ_border_color="#dce2e9"
                app:civ_border_width="2dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>