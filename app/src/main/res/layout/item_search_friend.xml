<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/item_search_cv_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_search_civ_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:src="@drawable/head"
                app:civ_border_color="#b3dce2e9"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/item_search_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/item_search_civ_head"
                android:text="用户昵称"
                android:textColor="#404040"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_tv_nick"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/item_search_civ_head"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_search_iv_phone"
                    android:layout_width="15dp"
                    android:layout_height="20dp"

                    android:src="@drawable/phone"
                    android:text="13812345678"
                    android:textColor="#b0afaf" />

                <TextView
                    android:id="@+id/item_search_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="13812345678"
                    android:textColor="#b0afaf"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_search_tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="添加"
                android:textColor="#518fff"
                android:textSize="17sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>