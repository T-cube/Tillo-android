<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_chat_txt_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_corner_bg"
        android:gravity="center"
        android:minWidth="55dp"
        android:padding="5dp"
        android:text="今天"
        android:textColor="#b0afaf"
        android:textSize="10sp"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/item_chat_ll_right_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_bg"
        android:maxWidth="125dp"
        android:minWidth="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_chat_txt_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="123213213213"
            android:textAlignment="textStart"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/item_chat_txt_right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="10:30PM"
            android:textColor="#b0afaf"
            android:textSize="11sp" />

    </LinearLayout>

</LinearLayout>

