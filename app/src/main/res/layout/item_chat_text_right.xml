<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_chat_txt_right_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_corner_bg"
        android:gravity="center"
        android:minWidth="55dp"
        android:padding="5dp"
        android:text="今天"
        android:textColor="#b0afaf"
        android:textSize="10sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/item_chat_pb_right_progress"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_chat_pb_right_failed"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/send_failed"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/item_chat_ll_right_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/send_bg"
            android:gravity="center_vertical"
            android:maxWidth="250dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_chat_txt_right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:maxWidth="180dp"
                android:textAlignment="textStart"
                android:textColor="#333333"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="10dp" />
</LinearLayout>

