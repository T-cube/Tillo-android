<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:maxWidth="180dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="51dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_et_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:imeActionLabel="发送"
            android:imeOptions="actionSend"
             />

        <ImageView
            android:id="@+id/chat_iv_send"
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:src="@drawable/chat_send_icon" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffcccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_iv_more"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/more_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_iv_album"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/album_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_iv_camera"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/camera_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_iv_emoji"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/emoji_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <views.AudioRecorderButton
                android:id="@+id/chat_arb_voice"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/mic_icon"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>